<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/holo_red_light"
    tools:context="com.proyectos.javi.json_jmedinilla.Actividad_Dos">

    <TextView
        android:textColor="@android:color/primary_text_dark"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Introduce una ciudad para descargar su predicción para la próxima semana:"
        android:id="@+id/textView" />

    <EditText
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginBottom="10dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbxCiudad_Ej2" />

    <Button
        android:background="@android:color/background_light"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Descargar"
        android:id="@+id/btnDescargar_Ej2" />
</LinearLayout>
